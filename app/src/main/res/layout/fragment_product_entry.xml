<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:padding="10dp">


        <LinearLayout
            android:id="@+id/id_number_show"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/colorPrimary"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/TestView1"
                android:layout_width="257dp"
                android:layout_height="wrap_content"
                android:layout_weight="3"
                android:text="  id"
                android:textColor="#ffffff"
                android:textSize="20dp" />

            <TextView
                android:id="@+id/TestView2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"

                android:textColor="#ffffff"
                android:text="  数量"
                android:textSize="18dp" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/ll_entry_list"
            android:layout_below="@+id/id_number_show"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

        </LinearLayout>

        <Button
            android:id="@+id/btn_confirm_entry"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/ll_entry_list"
            android:layout_marginTop="10dp"
            android:background="@drawable/button_confirm_shape"
            android:text="确定入库"
            android:textColor="#FFFFFF"
            android:textSize="20dp" />
    </RelativeLayout>
</ScrollView>